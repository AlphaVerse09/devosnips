rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    // Checks if a user's UID matches the designated admin UID.
    function isAdmin(userId) {
      return userId == 'TD7UkyNpawhnTZfKunrsbjycqHV2';
    }

    // --- User Data Rules ---
    // Secures the 'users' collection.
    match /users/{userId}/{document=**} {
      // Users can only read/write their own data.
      // Admins can read anyone's data but cannot write to it (to prevent accidental changes).
      allow read: if request.auth.uid == userId || isAdmin(request.auth.uid);
      allow write: if request.auth.uid == userId;
    }

    // --- Changelog Rules ---
    // Manages access to the 'changelogs' collection for release notes.
    match /changelogs/{logId} {
      // Any authenticated user can read the changelogs.
      allow read: if request.auth != null;
      // ONLY the designated admin can create, update, or delete changelogs.
      allow write: if isAdmin(request.auth.uid);
    }
  }
}
