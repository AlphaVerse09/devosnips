
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is in the admin list
    function isAdmin() {
      // The list of admin User IDs must be kept in sync with the list in `src/lib/firebase/firestore.ts`
      return request.auth.uid in ['TD7UkyNpawhnTZfKunrsbjycqHV2'];
    }

    // User-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Changelogs collection
    match /changelogs/{changelogId} {
      allow read: if request.auth != null; // Allow any authenticated user to read
      allow create, update, delete: if isAdmin(); // Only admins can write
    }
  }
}
