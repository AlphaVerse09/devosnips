rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAdmin() {
      // Check if the user's UID is in the list of admin UIDs.
      return request.auth.uid == 'TD7UkyNpawhnTZfKunrsbjycqHV2';
    }

    function isOwner(userId) {
      // Check if the user is the owner of the document.
      return request.auth.uid == userId;
    }

    // --- User Data Rules ---
    // Users can only read and write their own data.
    match /users/{userId}/{documents=**} {
      allow read, write: if isOwner(userId);
    }
    
    // --- Changelog Rules ---
    // Any authenticated user can read changelogs.
    // Only an admin can create, update, or delete changelogs.
    match /changelogs/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
