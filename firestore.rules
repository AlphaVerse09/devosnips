rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requesting user's UID is in the admin list.
    function isAdmin() {
      return request.auth.uid in ['TD7UkyNpawhnTZfKunrsbjycqHV2'];
    }

    // Rules for user-specific data (snippets, subcategories, etc.)
    match /users/{userId}/{documents=**} {
      // A user can read and write to their own documents.
      // An admin can also read any user's documents (but not write, for safety).
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
    }

    // Rules for public changelogs
    match /changelogs/{changelogId} {
      // Any authenticated user can read the changelogs.
      allow read: if request.auth != null;
      // Only admins can create, update, or delete changelogs.
      allow write: if isAdmin();
    }
  }
}
