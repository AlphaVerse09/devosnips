rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    function isAdmin() {
      // Compare the requesting user's UID to the hardcoded admin UID.
      return request.auth.uid == 'TD7UkyNpawhnTZfKunrsbjycqHV2';
    }

    // Rules for the 'changelogs' collection
    match /changelogs/{changelogId} {
      // Any authenticated user can read the changelogs.
      allow read: if request.auth != null;
      
      // Only the admin can create, update, or delete changelogs.
      allow write: if isAdmin();
    }
    
    // Rules for all documents within a specific user's folder
    match /users/{userId}/{document=**} {
      // A user can read and write to their own documents. The admin can also read/write.
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
  }
}
