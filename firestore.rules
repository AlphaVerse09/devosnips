
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User-specific data
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Changelogs collection
    match /changelogs/{changelogId} {
      // Allow all authenticated users to read changelogs
      allow read: if request.auth != null;
      
      // Only allow admins to write/update/delete changelogs
      allow write, update, delete: if canAdminChangelogs(request.auth.uid);
    }
  }
}

// Helper function to check if a user is an admin
function canAdminChangelogs(uid) {
  // Admin UIDs are stored in an array
  return uid in ['vfGb4jXfBsZA79t3QFk2nScFmw92'];
}
