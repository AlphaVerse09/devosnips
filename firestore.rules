
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin(userId) {
      // vfGb4jXfBsZA79t3QFk2nScFmw92 is the ADMIN_USER_ID from firestore.ts
      return userId == 'vfGb4jXfBsZA79t3QFk2nScFmw92';
    }

    // Snippets Rules
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Changelogs Rules
    // Allow anyone authenticated to read.
    // Only allow the admin to create, update, or delete.
    match /changelogs/{changelogId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}
